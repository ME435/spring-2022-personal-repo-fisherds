MDBoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: "Direct Serial GUI"

    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_width: True
        pos_hint: {'center_x': 0.5}
        spacing: 20

        MDRectangleFlatButton:
            text: "Led ON"
            on_press: app.mqtt_client.send_message("led", 1)

        MDRectangleFlatButton:
            text: "Led OFF"
            on_press: app.mqtt_client.send_message("led", 0)

    MDSlider:
        min: 120
        max: 1500
        value: 440
        on_touch_up: app.frequency = int(self.value)

    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_width: True
        pos_hint: {'center_x': 0.5}
        spacing: 20

        MDRectangleFlatButton:
            text: "Send Tone"
            on_press: app.mqtt_client.send_message("tone", app.frequency)

        MDRectangleFlatButton:
            text: "Mary"
            on_press: app.mqtt_client.send_message("song", "mary")

    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_width: True
        pos_hint: {'center_x': 0.5}
        spacing: 2

        MDRectangleFlatButton:
            text: "C"
            on_press: app.mqtt_client.send_message("tone", 262)

        MDRectangleFlatButton:
            text: "D"
            on_press: app.mqtt_client.send_message("tone", 294)

        MDRectangleFlatButton:
            text: "E"
            on_press: app.mqtt_client.send_message("tone", 330)

        MDRectangleFlatButton:
            text: "F"
            on_press: app.mqtt_client.send_message("tone", 349)

        MDRectangleFlatButton:
            text: "G"
            on_press: app.mqtt_client.send_message("tone", 392)

    Widget