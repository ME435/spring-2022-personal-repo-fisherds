MDBoxLayout:
    orientation: 'vertical'

    MDToolbar:
        title: "Hello Button"
    
    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_width: True
        pos_hint: {'center_x': 0.5}
        spacing: 10

        MDRectangleFlatButton:
            text: "Decrement"
            on_press: app.change(-1)

        MDRectangleFlatButton:
            text: "Reset"
            on_press: app.set(0)

        MDRectangleFlatButton:
            text: "Increment"
            on_press: app.change(1)

    MDLabel:
        text: app.my_text
        halign: "center"
    
    Widget
    